<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_selection_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="andydean.opencvcamera.SelectionScreen">

    <Button
        android:id="@+id/hough_lines_real_time_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Hough Lines Real Time"
        android:layout_below="@+id/main_detector_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/hough_lines_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hough Lines Image"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/test_location_detector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Test Location Detector"
        android:layout_below="@+id/hough_lines_image_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/main_detector_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Main Detector" />

    <Button
        android:id="@+id/test_cube_builder_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Test Cube Builder" />
</RelativeLayout>
